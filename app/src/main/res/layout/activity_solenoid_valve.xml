<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SolenoidValveActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pilih menu Titik A,B,C Menyalakan Air"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switchA"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_buttom"
            android:text=" Sensor  A"
            android:textColor="@android:color/white"
            android:paddingHorizontal="29dp"
            android:paddingVertical="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switchB"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_buttom"
            android:text="Sensor   B"
            android:textColor="@android:color/white"
            android:paddingHorizontal="29dp"
            android:paddingVertical="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchA" />

        <Switch
            android:id="@+id/switchC"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_buttom"
            android:text="Sensor   C"
            android:textColor="@android:color/white"
            android:paddingHorizontal="29dp"
            android:paddingVertical="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchB" />

        <TextView
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pilih menu Debit Air"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <!-- Button untuk 300ml -->
        <Button
            android:id="@+id/button300ml"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_buttom"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="29dp"
            android:paddingVertical="20dp"
            android:text="300ml"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <!-- Button untuk 500ml -->
        <Button
            android:id="@+id/button500ml"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_buttom"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="29dp"
            android:paddingVertical="20dp"
            android:text="500ml"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <!-- Button untuk 0ml -->
        <Button
            android:id="@+id/button0ml"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_buttom"
            android:text="0ml"
            android:textColor="@android:color/white"
            android:paddingHorizontal="29dp"
            android:paddingVertical="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
